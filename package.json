{
    "name": "progress-component",
    "version": "1.0.0",
    "description": "Modern Progress Component with TypeScript and clean API",
    "main": "index.js",
    "scripts": {
      "start": "cross-env NODE_ENV=development webpack serve --mode development",
      "build-dev": "cross-env NODE_ENV=development webpack --mode development",
      "build-prod": "cross-env NODE_ENV=production webpack --mode production",
      "clear": "rm -rf build || rd /s /q build",
      "prepare": "husky install",
      "format": "prettier --write --ignore-unknown \"src/**/*.{ts,js,scss,html}\"",
      "format:check": "prettier --list-different \"src/**/*.{ts,js,scss,html}\"",
      "ci:format": "prettier --check \"src/**/*.{ts,js,scss,html}\"",
      "lint": "eslint . --ext .js,.ts",
      "lint:fix": "eslint . --ext .js,.ts --fix",
      "stylelint": "stylelint \"src/**/*.{css,scss}\"",
      "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
      "predeploy": "npm run build-prod",
      "deploy": "gh-pages -d build",
      "dev": "npm run start"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged",
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
    },
    "keywords": [
      "progress",
      "component",
      "typescript",
      "webpack",
      "mobile",
      "responsive"
    ],
    "author": "Maltseva Tamara",
    "license": "MIT",
    "devDependencies": {
      "@babel/core": "^7.26.0",
      "@babel/preset-env": "^7.26.0",
      "@commitlint/cli": "^19.7.1",
      "@commitlint/config-conventional": "^19.7.1",
      "@typescript-eslint/eslint-plugin": "^8.26.0",
      "@typescript-eslint/parser": "^8.26.0",
      "babel-loader": "^9.2.1",
      "clean-webpack-plugin": "^4.0.0",
      "copy-webpack-plugin": "^12.0.2",
      "css-loader": "^6.10.0",
      "eslint": "^8.57.1",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-import-resolver-alias": "^1.1.2",
      "eslint-import-resolver-typescript": "^4.2.4",
      "eslint-plugin-import": "^2.31.0",
      "eslint-plugin-prettier": "^5.2.3",
      "eslint-plugin-unicorn": "^50.0.1",
      "eslint-webpack-plugin": "^4.0.1",
      "gh-pages": "^6.3.0",
      "html-loader": "^5.0.0",
      "html-webpack-plugin": "^5.6.0",
      "husky": "^8.0.3",
      "lint-staged": "^15.4.3",
      "mini-css-extract-plugin": "^2.8.1",
      "postcss-loader": "^8.1.1",
      "postcss-preset-env": "^9.4.0",
      "postcss-scss": "^4.0.9",
      "prettier": "^3.2.5",
      "sass": "^1.83.4",
      "sass-loader": "^16.0.4",
      "style-loader": "^4.0.0",
      "stylelint": "^15.11.0",
      "stylelint-config-clean-order": "^5.2.0",
      "stylelint-config-standard": "^34.0.0",
      "stylelint-scss": "^5.3.2",
      "ts-loader": "^9.5.2",
      "typescript": "^5.7.3",
      "webpack": "^5.90.3",
      "webpack-cli": "^5.1.4",
      "webpack-dev-server": "^5.0.2"
    },
    "dependencies": {
      "cross-env": "^7.0.3"
    },
    "browserslist": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  }